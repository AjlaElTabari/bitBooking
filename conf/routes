# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                           @controllers.Application.index()
GET         /loginmessage               @controllers.Application.loginmessage()
GET         /registrationmessage        @controllers.Application.registrationmessage()
GET         /register                   @controllers.Application.register()
GET         /addhotel                   @controllers.Application.registerHotel()
GET         /edit_user                  @controllers.Users.editUser()
GET         /hotel                      @controllers.Users.showHotel()
GET         /admin                      @controllers.Users.logAdmin()
# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

POST        /register/                  @controllers.Users.insertUser()
POST        /frontpage                  @controllers.Users.login()

POST        /addhotel                   @controllers.Hotels.insertHotel()

